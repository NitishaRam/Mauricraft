<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.essoofarheen.mauricraft.MainRegistrationPage">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:id="@+id/btnExit"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:background="#fb2020"
        android:minHeight="40dp"
        android:minWidth="80dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignEnd="@+id/gridView" />


    <GridView

        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:background="#80787575"
        android:id="@+id/gridView"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/btnExit"
        android:choiceMode="none"
        tools:listitem="@layout/abc_action_menu_layout"
        android:minHeight="300dp"
        android:numColumns="90" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:id="@+id/btnregister"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:nestedScrollingEnabled="false"
        android:background="#1f35fa"
        android:textSize="19sp"
        android:minWidth="100dp"
        android:focusable="false"
        android:minHeight="40dp"
        android:layout_alignTop="@+id/gridView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username :"
        android:id="@+id/user"
        android:layout_below="@+id/btnregister"
        android:layout_alignStart="@+id/gridView"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:textColor="#070707"
        android:textSize="23sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password :"
        android:id="@+id/Text2"
        android:layout_below="@+id/user"
        android:layout_alignStart="@+id/gridView"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:textColor="#070707"
        android:textSize="23sp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register As Customer"
        android:id="@+id/btnCustReg"
        android:layout_centerInParent="true"
        android:background="#1f35fa"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:minHeight="40dp"
        android:nestedScrollingEnabled="false"
        android:minWidth="220dp"
        android:layout_below="@+id/gridView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TxtUser"
        android:ems="8"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="2dp"
        android:layout_above="@+id/Text2"
        android:layout_alignEnd="@+id/btnExit"
        android:layout_alignStart="@+id/TxtPass" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="8"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="2dp"
        android:id="@+id/TxtPass"
        android:layout_alignBottom="@+id/Text2"
        android:layout_alignEnd="@+id/btnExit"
        android:layout_alignStart="@+id/btnlogin" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btnlogin"
        android:layout_alignBottom="@+id/gridView"
        android:layout_alignStart="@+id/btnregister"
        android:background="#1f35fa"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:layout_marginBottom="13dp"
        android:layout_alignEnd="@+id/btnregister"
        android:minHeight="45dp"
        android:minWidth="100dp" />

</RelativeLayout>

